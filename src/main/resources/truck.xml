<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="truck" class="hu.course.spring.core.beans.Truck">
		<constructor-arg value="DAF" />
		<constructor-arg value="105XF" />
		<constructor-arg value="410" />
	</bean>

	<bean id="trucker" class="hu.course.spring.core.beans.Trucker" autowire="constructor">
		<constructor-arg value="Clint Eastwood" />
	</bean>

</beans>